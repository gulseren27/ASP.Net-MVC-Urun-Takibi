@model mvcProje.Models.Entity.TBLURUNLER
@{
    ViewBag.Title = "YenıUrun_";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Yeni Ürün Ekle</h2>


<form class="form-group" method="post">


    <div>
        <label>Ürün Adı :</label>
        <input class="form-control" type="text" placeholder="Ürün Adı" name="URUNAD" required="">

    </div>

    <div>
        <label>Kategori Seçiniz:</label>
        @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>

    <div>
        <label>Ürün Fiyatı :</label>
        <input class="form-control" type="text" placeholder="Ürün Fiyatı" name="FIYAT" required="">

    </div>

    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn3">Ürün Ekle</button>
    </div>
    <script>
        $('#btn3').click(function () {
            alert('Ürün Eklendi');
        });
    </script>
</form>

