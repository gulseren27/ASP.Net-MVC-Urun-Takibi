@using mvcProje.Models.Entity
@using PagedList;
@using PagedList.Mvc;

@model PagedList.IPagedList<TBLURUNLER>

@{
    ViewBag.Title = "IndexUrunler";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Ürünler</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ÜRÜN ID </th>
            <th>ÜRÜN ADI</th>
            <th>ÜRÜN KATEGORİ</th>
            <th>FİYAT</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>ALERT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urn in Model)
        {
        <tr>
            <td>@urn.URUNID</td>
            <td>@urn.URUNAD</td>
            <td>@urn.TBLKATEGORILER.KATEORIAD</td>
            <td>@urn.FIYAT</td>
            <td><a href="/URUN/SIL/@urn.URUNID" class=" btn btn-danger">SİL</a></td>
            <td><a href="/URUN/UrunGetir/@urn.URUNID" class=" btn btn-success">GÜNCELLE</a></td>
            <td>@Html.ActionLink("SİL BUTONU", "SİL", new { id = urn.URUNID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstediğinizden Emin Misiniz?')" })</td>

        </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("IndexUrunler",new {sayfa}))
<a href="/URUN/YenıUrun_" class="btn btn-primary">Yeni Ürün Ekle</a>